<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/errorMsg"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginStart="6dp"
                android:text="よみは必須入力項目です。"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/flatLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/flatLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="6dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintBottom_toTopOf="@+id/wordName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.444"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/errorMsg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="40dp">

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="編集"
                    app:layout_constraintBottom_toTopOf="@+id/wordName"
                    app:layout_constraintEnd_toStartOf="@+id/checkBox4"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintTop_toBottomOf="@+id/flatLine"
                    app:layout_constraintVertical_chainStyle="packed" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="削除"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/checkBox3"
                    app:layout_constraintTop_toBottomOf="@+id/errorMsg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="40dp">

                <TextView
                    android:id="@+id/wordName"
                    android:layout_width="77dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="単語名："
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/readName"
                    app:layout_constraintEnd_toStartOf="@+id/editText2"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintTop_toBottomOf="@+id/flatLine"
                    app:layout_constraintVertical_chainStyle="packed" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/wordName"
                    app:layout_constraintTop_toBottomOf="@+id/errorMsg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="40dp">

                <TextView
                    android:id="@+id/readName"
                    android:layout_width="77dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="よみ　："
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/wordMean"
                    app:layout_constraintEnd_toStartOf="@+id/editText3"
                    app:layout_constraintTop_toBottomOf="@+id/wordName"
                    app:layout_constraintVertical_chainStyle="packed" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/wordName"
                    app:layout_constraintTop_toBottomOf="@+id/errorMsg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wordMean"
                    android:layout_width="77dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="意味　："
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/readName" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView"
                style="@android:style/Widget.Holo.Light.ScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/dispedia_drawable"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wordMean">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="342dp"
                        android:layout_height="101dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="7dp"
                        android:text="HyperText Markup Languageの第5版。今まで複雑だった処理が簡単に出来て、HTMLをより構造的にスッキリ書ける。"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/editText2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="101dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="7dp"
                        android:text="テキストエリアは、入力が指定したサイズを越えた場合スクロールします。"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/editText2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="7dp"
                        android:text="ここまで"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/editText2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/relationTag"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginEnd="305dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="18dp"
                android:text="関連タグ"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollView" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/dispedia_drawable"
                android:entries="@array/relationList"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relationTag" />

            <Button
                android:id="@+id/executeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="323dp"
                android:layout_marginTop="16dp"
                android:text="実行"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner2" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
